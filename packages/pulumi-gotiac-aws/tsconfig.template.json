{
    "extends": "@gothub/typescript-util/tsconfig-backend.json",
    "compilerOptions": {
        "outDir": "bin",

        // Bundler mode
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": false,
        "verbatimModuleSyntax": false,
        "noEmit": false,

        "types": ["@types/node"]
    },
    "include": ["**/*.ts"]
}
